<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_icon2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/main_icon2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/main_icon"
        app:layout_constraintBottom_toBottomOf="@+id/main_icon2"
        app:layout_constraintEnd_toEndOf="@+id/main_icon2"
        app:layout_constraintStart_toStartOf="@+id/main_icon2"
        app:layout_constraintTop_toTopOf="@+id/main_icon2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_icon2" />

    <ImageView
        android:id="@+id/start_top_corner"
        android:layout_width="242dp"
        android:layout_height="206dp"
        android:layout_marginStart="-100dp"
        android:src="@drawable/artboard_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/start_bottom_corner"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginEnd="-180dp"
        android:layout_marginBottom="-200dp"
        android:src="@drawable/artboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>